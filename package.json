{
  "name": "sweetconfirm.js",
  "version": "0.4.0",
  "description": "A useful zero-dependencies, less than 434 Bytes (gzipped), pure JavaScript & CSS solution for drop an annoying pop-ups confirming the submission of form in your web apps.",
  "main": "sweetconfirm.min.js",
  "scripts": {
    "update": "npm outdated && npx npm-check-updates -u && npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup --config ./rollup.config.js",
    "watch": "rollup --config ./rollup.config.js --watch --compact",
    "size": "npm run build && size-limit",
    "size:why": "npm run size -- --why"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.26.0",
    "@size-limit/preset-small-lib": "^4.5.5",
    "@size-limit/time": "^5.0.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koddr/sweetconfirm.js.git"
  },
  "bugs": {
    "url": "https://github.com/koddr/sweetconfirm.js/issues",
    "email": "vic@shostak.dev"
  },
  "homepage": "https://sweetconfirm.js.org",
